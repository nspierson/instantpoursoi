{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
    <h1>Booking</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ booking.createdAt ? booking.createdAt|date('d-m-Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Rendez-vous</th>
                <td>{{ booking.appointment ? booking.appointment|date('d-m-Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Commentaire (facultatif)</th>
                <td>{{ booking.comment }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ booking.email }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ booking.phone }}</td>
            </tr>
            <tr>
                <th>Soins programmés</th>
                {% for care in booking.cares %}
                    <td>{{ care.name }}</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('booking_index') }}">back to list</a>

    <a href="{{ path('booking_edit', {'id': booking.id}) }}">edit</a>

    {{ include('booking/_delete_form.html.twig') }}
{% endblock %}
