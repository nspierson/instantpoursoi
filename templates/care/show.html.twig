{% extends 'base.html.twig' %}
{% block title %}{{ care.name }}{% endblock %}
{% block body %}
<h3 class="text-center"> {{ care.name }}</h3>
    <div class="row">
        <div class="col-8 offset-2">
            <div class="card">
                <div class="card-body d-flex justify-content-around">
                    <p class="card-text">Prix: {{ care.price }}€</p>
                    <p class="card-text">Durée: {{ care.length }} min</p>
                </div>
                <div class="card-footer text-muted small ">
                    <p class="text-center">{{ care.description }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}